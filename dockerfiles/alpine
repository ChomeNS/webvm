FROM --platform=i386 i386/alpine

RUN apk update

RUN apk add nano wget sudo bash openssh curl

RUN wget https://github.com/hykilpikonna/hyfetch/raw/master/neofetch -O /usr/bin/neofetch
RUN chmod +x /usr/bin/neofetch

WORKDIR /home/vm

RUN adduser -h /home/vm -G wheel vm

RUN echo 'root:password' | chpasswd
RUN echo 'vm:password' | chpasswd

USER vm

ENV HOME="/home/vm" USER="vm" TERM="xterm" SHELL="bash" COLOR="auto" EDITOR="nano" LANG="en_US.UTF-8" LC_ALL="C"

CMD [ "/bin/bash" ]
